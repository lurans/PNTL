                <configuration>
                    <archive>
                        <manifestEntries>
                            <Built-By>admin</Built-By>
                        </manifestEntries>
                    </archive>
                    <!-- -->
                    <webResources>
                        <resource>
                            <directory>${project.basedir}/../libs/opensource</directory>
                            <targetPath>WEB-INF/lib</targetPath>
                            <includes>
                                <include>spymemcached-2.9.1.jar</include>
