                            </includes>
                        </resource>
                        <resource>
                            <directory>${project.basedir}/../libs/platform</directory>
                            <targetPath>WEB-INF/lib</targetPath>
                            <includes>
                                <include>com.huawei.openas.sso.client-3.3.20.133.jar</include>
                                <include>com.huawei.openas.sso.common-3.3.20.133.jar</include>
                            </includes>
                        </resource>
                    </webResources>
                    <!-- -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <artifactItems>
                        <artifactItem>
                            <groupId>com.huawei.blackhole</groupId>
                            <artifactId>blackhole-oncf-wcccrypter</artifactId>
                            <version>${oncf.version}</version>
                            <outputDirectory>${project.build.directory}/${project.name}/WEB-INF/lib</outputDirectory>
                            <destFileName>blackhole-encrypt-tool.jar</destFileName>
                        </artifactItem>
                    </artifactItems>
                </configuration>
            </plugin>
        </plugins>
    </build>

